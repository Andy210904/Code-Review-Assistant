# ============================================
# Code Review Assistant - Environment Configuration
# ============================================

# Application Settings
APP_NAME="Code Review Assistant API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="An intelligent code review system using LLM"
DEBUG=True
ENVIRONMENT="development"

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
LOG_LEVEL=info

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOW_CREDENTIALS=True

# ============================================
# LLM Configuration
# ============================================

# OpenAI Configuration (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Alternative LLM Providers (uncomment as needed)

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI (Gemini)
# GOOGLE_API_KEY=your-google-ai-api-key-here
# GOOGLE_MODEL=gemini-pro

# Azure OpenAI
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_API_VERSION=2023-12-01-preview
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Local/Self-hosted LLM
# LOCAL_LLM_ENDPOINT=http://localhost:11434/api/generate
# LOCAL_LLM_MODEL=llama2

# ============================================
# File Processing Configuration
# ============================================

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REQUEST=20
SUPPORTED_EXTENSIONS=.py,.js,.ts,.java,.cpp,.c,.go,.rs,.php,.rb,.swift,.kt,.cs

# File Processing
DEFAULT_ENCODING=utf-8
ENCODING_DETECTION_CONFIDENCE=0.7

# ============================================
# Code Analysis Configuration
# ============================================

# Analysis Settings
DEFAULT_ANALYSIS_DEPTH=standard
ENABLE_SUGGESTIONS=True
MAX_ISSUES_PER_FILE=50
MAX_SUGGESTIONS_PER_FILE=10

# Scoring Configuration
BASE_QUALITY_SCORE=10.0
CRITICAL_ISSUE_PENALTY=3.0
HIGH_ISSUE_PENALTY=2.0
MEDIUM_ISSUE_PENALTY=1.0
LOW_ISSUE_PENALTY=0.5

# Complexity Thresholds
MAX_LINE_LENGTH=120
HIGH_COMPLEXITY_THRESHOLD=15
MAINTAINABILITY_THRESHOLD=60

# ============================================
# Database Configuration (Optional)
# ============================================

# PostgreSQL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/code_review_db
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# MySQL
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/code_review_db

# SQLite (for development)
# DATABASE_URL=sqlite+aiosqlite:///./code_review.db

# ============================================
# Redis Configuration (Optional - for caching)
# ============================================

# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
# CACHE_TTL_SECONDS=3600

# ============================================
# Monitoring and Logging
# ============================================

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5

# Metrics and Monitoring
ENABLE_METRICS=False
# PROMETHEUS_PORT=9090

# Health Check
HEALTH_CHECK_TIMEOUT=30

# ============================================
# Rate Limiting (Optional)
# ============================================

# RATE_LIMIT_ENABLED=False
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# ============================================
# Email Configuration (Optional - for notifications)
# ============================================

# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@codereviewassistant.com

# ============================================
# API Documentation
# ============================================

# Swagger/OpenAPI Configuration
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
INCLUDE_API_DOCS=True

# ============================================
# Development Settings
# ============================================

# Development flags
ENABLE_DEBUG_ENDPOINTS=True
MOCK_LLM_RESPONSES=False
SAVE_REQUEST_LOGS=True

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
TEST_OPENAI_API_KEY=test-key-for-mocking